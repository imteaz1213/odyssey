<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Border -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Border color -->
            <corners android:radius="5dp" />  <!-- Corner radius -->
        </shape>
    </item>
    <item android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">
        <!-- Inner background -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <corners android:radius="5dp" />  <!-- Match outer radius -->
        </shape>
    </item>
</layer-list>
